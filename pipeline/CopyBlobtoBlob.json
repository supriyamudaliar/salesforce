{
	"name": "CopyBlobtoBlob",
	"properties": {
		"activities": [
			{
				"name": "CopySalesData",
				"type": "Copy",
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"typeProperties": {
					"source": {
						"type": "BlobSource",
						"recursive": true
					},
					"sink": {
						"type": "BlobSink"
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "Employees",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "OutputDataset",
						"type": "DatasetReference"
					}
				]
			}
		]
	}
}